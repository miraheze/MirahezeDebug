{
    "manifest_version": 3,
    "name": "MirahezeDebug-beta",
    "description": "Injects 'X-Miraheze-Debug' header to HTTP requests.",
    "author": [ "Paladox", "Universal Omega", "Ori Livneh" ],
    "version": "2.0.0",
    "action": {
        "default_title": "X-Miraheze-Debug",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": ["content_script.js"]
        }
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": [
        "alarms",
        "tabs",
        "webRequest",
        "webRequestBlocking"
    ],
    "host_permissions": [
        "*://*.miraheze.org/*"
    ],
    "optional_host_permissions": [
        "*://*/*"
    ],
    "applications": {
        "gecko": {
            "id": "",
            "strict_min_version": "42.0"
        }
    }
}
