{
    "manifest_version": 3,
    "name": "MirahezeDebug",
    "description": "Injects 'X-Miraheze-Debug' header to HTTP requests.",
    "author": [
        "Universal Omega",
        "Paladox",
        "Ori Livneh"
    ],
    "version": "2.0.0",
    "icons": {
        "512": "logo.png"
    },
    "action": {
        "default_title": "X-Miraheze-Debug",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": ["content_script.js"]
        }
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": [
        "alarms",
        "tabs",
        "declarativeNetRequest"
    ],
    "host_permissions": [
        "<all_urls>"
    ]
}
